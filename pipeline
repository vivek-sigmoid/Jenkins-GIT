pipeline {
    environment {
        registry = "jenkins-assignment"
        dockerImage = ''
    }
    agent any
    stages {
        stage('Cloning our Git') {
            steps {
                git 'https://github.com/vivek-sigmoid/Jenkins-GIT.git'
            }
        }
        stage('Build image') {
            app = docker.build("https://asia.gcr.io/compact-record-332904/jenkins-assignment")
        }
        stage('Push image') {
            docker.withRegistry('https://asia.gcr.io', 'gcr:My First Project') {
                app.push("v1")
            }
        }
        stage('Cleaning up') {
            steps {
                sh "docker rmi $registry:v1"
            }
        }
    }
}

