pipeline {
    agent any

    stages {
        stage("Build") {
          steps {
             sh '''
               Docker build -t jenkins-assignment:v1 ./stages/build/
               '''
             }
        }
        stage("Push") {
           steps {
            sh '''
               echo "Push"
               '''
           }
        }
        stage("Deploy") {
         steps {
            sh '''
               echo "Deploy"
               '''
           }
        }
    }
}