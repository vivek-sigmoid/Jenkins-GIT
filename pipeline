pipeline {
    environment {
        registry = "jenkins-assignment"
    }
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    DockerImage = docker.build("compact-record-332904/jenkins-assignment" + ":v1")
                    }
                }
        }
        stage('Push image') {
            steps {
                script {
                    docker.withRegistry('https://asia.gcr.io', 'My First Project') {
                        DockerImage.push("v1")
                    }
                }
            }
        }
        stage('Cleaning up') {
            steps {
                sh script: "docker rmi jenkins-assignment:v1"
            }
        }
    }
}

