pipeline {
    environment {
        registry = "jenkins-assignment"
        GCR_CREDENTIALS = credentials('gcr:My First Project')
    }
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    DockerImage = docker.build("compact-record-332904/jenkins-assignment" + ":v1")
                    }
                }
        }
        stage('Push') {
            steps{
                sh script: '''
                cat "$GCR_CREDENTIALS" > credentials.json
                docker login -u _json_key -p "$(cat credentials.json)" https://asia.gcr.io
                docker push gcr.io/compact-record-332904/jenkins-assignment:v1
                docker logout https://asia.gcr.io
                '''
            }
        }
        stage('Cleaning up') {
            steps {
                sh script: "docker rmi jenkins-assignment:v1"
            }
        }
    }
}