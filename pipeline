pipeline {
    environment {
        registry = "jenkins-assignment"
    }
    agent any
    stages {
        stage('login to gcr') {
            steps {
            withCredentials([file(My First Project: 'gcr-private-repo-reader', variable: 'GC_KEY')]){
                sh '''
                    chmod 600 $GC_KEY
                    cat $GC_KEY | docker login -u _json_key --password-stdin https://asia.gcr.io

                    docker ps
                '''
                }
            }
        }
        stage('Build and Push') {
            steps {
                script {
                    DockerImage = docker.build("compact-record-332904/jenkins-assignment" + ":v1")
                    docker.withRegistry('https://asia.gcr.io/', 'gcr:My First Project') {
                        DockerImage.push()
                    }
                }
        }
        }
        stage('Cleaning up') {
            steps {
                sh script: "docker rmi jenkins-assignment:v1"
            }
        }
    }
}
