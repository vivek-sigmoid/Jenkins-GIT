pipeline {
    environment {
        registry = "jenkins-assignment"
        GCR_CREDENTIALS = credentials('gcr:My First Project')
    }
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    DockerImage = docker.build("asia.gcr.io/compact-record-332904/jenkins-assignment" + ":v1")
                    }
                }
        }
        stage('Push') {
            steps{
                sh script: '''
                withCredentials([file(GCR_CREDENTIALS: 'key-sa', variable: 'GC_KEY')]) {
                sh("gcloud auth activate-service-account --key-file=${GC_KEY}")
                sh("gcloud container clusters get-credentials prod --zone asia-south1-a --project compact-record-332904")
                }
                '''
            }
        }
        stage('Cleaning up') {
            steps {
                sh script: "docker rmi asia.gcr.io/compact-record-332904/jenkins-assignment:v1"
            }
        }
    }
}