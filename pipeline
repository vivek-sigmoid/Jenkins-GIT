pipeline {
    environment {
        registry = "jenkins-assignment"
        GCR_CREDENTIALS = credentials('gcr:My First Project')
    }
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    DockerImage = docker.build("asia.gcr.io/compact-record-332904/jenkins-assignment" + ":v1")
                    }
                }
        }
        stage('Push') {
            steps{
                sh script: '''
                withCredentials([file(credentialsId: 'GCR_CREDENTIALS', variable: 'GC_KEY')]){
                sh '''
                    pwd
                    ls
                '''
            }
        }
        stage('Cleaning up') {
            steps {
                sh script: "docker rmi asia.gcr.io/compact-record-332904/jenkins-assignment:v1"
            }
        }
    }
}