pipeline {
    agent { dockerfile true }
    environment {
        GCR_CREDENTIALS = credentials('My First Project')
        PROJECT_ID = 'My First Project'
        CLUSTER_NAME = 'autopilot-cluster-1'
        REGION = 'asia-south1'
    }
    stages {
        stage("Build") {
          steps {
              sh '''
                 docker image list
                 echo "Success"
                 '''
             }
        }
        stage("Push") {
           steps {
            sh '''
               echo "PUSH"
               '''
           }
        }
        stage("Deploy") {
         steps {
            sh '''
               echo "Deploy"
               '''
           }
        }
    }
}