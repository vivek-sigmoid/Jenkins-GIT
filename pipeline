pipeline {
    agent any
    environment {
        GCR_CRED = credentials('gcr:MyProject')
    }
    stages {
        stage('Build') {
            steps {
                script {
                    DockerImage = docker.build("compact-record-332904/jenkins-assignment" + ":v1")
                    }
                }
        }
        /* stage('Push') {
            steps{
                script {
                    docker.withRegistry('https://asia.gcr.io', 'gcr:MyProject') {
                    DockerImage.push()
                    }
                }
            }
        } */
        stage('Deployment') {
            steps {
                script {
                    withCredentials([file(credentialsId: 'credentials', variable: 'GC_KEY')]) {
                        sh '''
                        gcloud auth activate-service-account --key-file=${GC_KEY}
                        gcloud container clusters get-credentials my-first-cluster --zone asia-south1-a --project compact-record-332904
                        kubectl create -f python-deployment.yaml
                        '''
                    }
                }
            }
        }
        stage('list') {
            steps {
                sh '''
                gcloud container images list --repository=gcr.io/global-memento-332706
                kubectl get po
                kubectl get deploy
                '''
                }
        }
        stage('Cleaning up') {
            steps {
                sh script: "docker rmi compact-record-332904/jenkins-assignment:v1"
            }
        }
    }
}