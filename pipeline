pipeline {
    environment {
        registry = "jenkins-assignment"
        GCR_CREDENTIALS = credentials('credentials')
    }
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    DockerImage = docker.build("asia.gcr.io/compact-record-332904/jenkins-assignment" + ":v1")
                    }
                }
        }
        stage('Push') {
            steps{
                sh script: '''
                gcloud auth login --cred-file=GCR_credentials
                }
                '''
            }
        }
        stage('Cleaning up') {
            steps {
                sh script: "docker rmi asia.gcr.io/compact-record-332904/jenkins-assignment:v1"
            }
        }
    }
}