pipeline {
    agent any
    environment {
        GCR_CRED = credentials('gcr:MyProject')
    }
    stages {
        stage('Build') {
            steps {
                script {
                    DockerImage = docker.build("compact-record-332904/jenkins-assignment" + ":v1")
                    }
                }
        }
        /* stage('Push') {
            steps{
                script {
                    docker.withRegistry('https://asia.gcr.io', 'gcr:MyProject') {
                    DockerImage.push()
                    }
                }
            }
        } */
        stage('Deployment') {
            steps {
                sh '''
                    echo "$GCR_CRED" > credentials.json
                    cat credentials.json
                    gcloud auth activate-service-account gcr3-779@compact-record-332904.iam.gserviceaccount.com --key-file=credentials.json
                    gcloud config set project compact-record-332904
                    gcloud container clusters get-credentials autopilot-cluster-1 --zone asia-south1
                    kubectl create -f python-deployment.yaml
                   '''
            }
        }
        stage('Cleaning up') {
            steps {
                sh script: "docker rmi compact-record-332904/jenkins-assignment:v1"
            }
        }
    }
}