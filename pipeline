pipeline {
    agent { dockerfile true }
    stages {
        stage("Build") {
          steps {
                echo "hello"
             }
        }
        stage("Push") {
           steps {
            sh '''
               python3 --version
               '''
           }
        }
        stage("Deploy") {
         steps {
            sh '''
               echo "Deploy"
               '''
           }
        }
    }
}